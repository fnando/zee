<%= style_tag do %>
  div {
    width: 100vw;
    height: 100vh;
    display: flex;
    flex-direction: column;
    align-items: center;
    justify-content: center;
  }

  small {
    color: var(--gray);
  }

  body {
    background: var(--blue-1);
  }

  ul {
    list-style: none;
    padding: 0;
    margin-top: 10px;
  }

  @media (prefers-color-scheme: dark) {
    body {
      background: color-mix(in srgb, var(--blue) 15%, #000 100%);
      color: rgba(255, 255, 255, .8);
    }

    small {
      color: rgba(255, 255, 255, .4);
    }
  }
<% end %>

<div>
  <p><%= image_tag "/icon.svg", size: 100 %></p>
  <ul>
    <li><strong>Zee version:</strong> <%= Zee::VERSION %></li>
    <li><strong>Ruby version:</strong> <%= RUBY_VERSION %></li>
    <li><strong>Rack version:</strong> <%= Rack::RELEASE %></li>
  </ul>

  <p><small>Edit this file at app/views/pages/home.html.erb</small></p>
</div>
