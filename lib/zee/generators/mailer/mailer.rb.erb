# frozen_string_literal: true

module Mailers
  # To expose a variable to the email template, use the instance variables.
  class <%= mailer_class_name %> < Zee::Mailer
  <%- options[:methods].each_with_index do |method, index| -%>

    def <%= method %>
      mail to: "to@example.com",
           from: "from@example.com",
           subject: "<%= method.tr("_", " ").capitalize %>"
    end
  <%- end -%>
  end
end
