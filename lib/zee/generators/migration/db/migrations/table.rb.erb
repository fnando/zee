# frozen_string_literal: true

# About migrations:
# - https://sequel.jeremyevans.net/rdoc/files/doc/schema_modification_rdoc.html
# - https://sequel.jeremyevans.net/rdoc/files/doc/migration_rdoc.html
Sequel.migration do
  change do
    <%= locals[:operation] %> :<%= locals[:table_name] %> do
      <%- locals[:fields].each do |field| -%>
      <%= field.sequel_type %> :<%= field.name %><%= ", #{render_options(field.options)}" if field.options.any? %>
      <%- end -%>
    end
  end
end
